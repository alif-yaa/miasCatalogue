               <!-- Composition History -->
               <date type="fmDate" calendar="Hijri-qamari">599</date>
               <date type="fmEarliestMS" calendar="Hijri-qamari">602</date>
               <date when="1111" cert="high" calendar="Hijri-qamari">Date of Composition</date>
