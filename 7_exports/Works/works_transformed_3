               <idno type="RG">307</idno>
               <idno type="Alt_RG"/>
               <idno type="RECORDID">122</idno>
               <idno type="Normalized">isfar</idno>
               <!-- Titles -->
               <title xml:lang="ara-Latn-x-lc" type="uniform">K. al-Isfār ʿan natāʾij al-asfār</title>
               <title xml:lang="ara" type="uniform-ara">كتاب الإسفار عن نتائج الأسفار</title>
               <title xml:lang="ara-Latn-x-lc" type="full"/>
               <title xml:lang="ara-Latn-x-lc" type="variant"/>
               <title xml:lang="eng" type="translationEng"/>
               <note type="titleNote">Note on Title</note>
               <!-- Textual Identifiers -->
               <incipit type="hamdala" xml:lang="ara-Latn-x-lc">al-ḥamdu lillāh al-kāʾin fi-l-ʿamā al-mawṣūf bi-l-istiwāʾ jalāl dhātihi</incipit>
