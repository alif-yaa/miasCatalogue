               <idno type="RG">269</idno>
               <idno type="Alt_RG"/>
               <idno type="RECORDID">27</idno>
               <idno type="Normalized">ijaza_muz</idno>
               <!-- Titles -->
               <title xml:lang="ara-Latn-x-lc" type="uniform">Ijāza li-l-malik al-Muẓaffar</title>
               <title xml:lang="ara" type="uniform-ara">إجازة للملك المظفر</title>
               <title xml:lang="ara-Latn-x-lc" type="full"/>
               <title xml:lang="ara-Latn-x-lc" type="variant"/>
               <title xml:lang="eng" type="translationEng"/>
               <note type="titleNote">Note on Title</note>
               <!-- Textual Identifiers -->
               <incipit type="hamdala" xml:lang="ara-Latn-x-lc">aqūl wa-anā Muḥammad b. ʿAlī b. ʿArabī al-Ḥāṭimī wa-hādhā lafẓī/khaṭṭī</incipit>
               <incipit type="hamdala-ara" xml:lang="ara">Arabic Script Incipit</incipit>
