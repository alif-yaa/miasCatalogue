               <date type="fmDate" calendar="Hijri-qamari">601</date>
               <date type="fmEarliestMS" calendar="Hijri-qamari">&lt;615</date>
               <date when="1111" cert="high" calendar="Hijri-qamari">Date of Composition</date>
