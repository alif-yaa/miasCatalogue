               <!-- Titles -->
               <title xml:lang="ara-Latn-x-lc" type="uniform">R. Rūḥ al-quds fī munāṣaḥat al-nafs</title>
               <title xml:lang="ara" type="uniform-ara">رسالة روح القدس في مناصحة النفس</title>
               <title xml:lang="ara-Latn-x-lc" type="full"/>
               <title xml:lang="ara-Latn-x-lc" type="variant">The Holy Spirit in the Counselling of the Soul</title>
               <title xml:lang="eng" type="translationEng">The Holy Spirit in the Counselling of the Soul</title>
               <note type="titleNote">Note on Title</note>
               <!-- Textual Identifiers -->
               <incipit type="hamdala" xml:lang="ara-Latn-x-lc">min al-ʿabd al-ḍaʿīf al-nāṣiḥ al-shafīq al-maʾmūr bi-l-naṣḥ</incipit>
               <incipit type="hamdala-ara" xml:lang="ara">Arabic Script Incipit</incipit>
