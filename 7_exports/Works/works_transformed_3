               <incipit type="hamdala" xml:lang="ara-Latn-x-lc">al-hamdu lillahī rabb al-ʿālamīn arād al-ḥamd al-muqayyid</incipit>
               <incipit type="hamdala-ara" xml:lang="ara">Arabic Script Incipit</incipit>
