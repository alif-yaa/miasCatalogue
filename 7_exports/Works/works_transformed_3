               <!-- Titles -->
               <title xml:lang="ara-Latn-x-lc" type="uniform">K. al-Aqṭāb</title>
               <title xml:lang="ara" type="uniform-ara">كتاب الأقطاب</title>
               <title xml:lang="ara-Latn-x-lc" type="full"/>
               <title xml:lang="ara-Latn-x-lc" type="variant"/>
