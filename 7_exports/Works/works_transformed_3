               <!-- Composition History -->
               <date type="fmDate" calendar="Hijri-qamari">603</date>
               <date type="fmEarliestMS" calendar="Hijri-qamari">617?</date>
               <date when="1111" cert="high" calendar="Hijri-qamari">Date of Composition</date>
