               <!-- Composition History -->
               <date type="fmDate" calendar="Hijri-qamari">?</date>
               <date type="fmEarliestMS" calendar="Hijri-qamari">&lt;700</date>
               <date when="1111" cert="high" calendar="Hijri-qamari">Date of Composition</date>
