            <bibl xml:id="dhakhair">
               <idno type="RG">116</idno>
               <idno type="Alt_RG"/>
               <idno type="RECORDID">288</idno>
               <idno type="Normalized">dhakhair</idno>
               <!-- Titles -->
               <title xml:lang="ara-Latn-x-lc" type="uniform">K. al-Dhakhāʾir wa-l-aʿlāq</title>
               <title xml:lang="ara" type="uniform-ara">كتاب الذخائر والأعلاق</title>
               <title xml:lang="ara-Latn-x-lc" type="full">Dhakhāir Al A’Alāq</title>
               <title xml:lang="ara-Latn-x-lc" type="variant"/>
               <title xml:lang="eng" type="translationEng">The Book of Treaures and Precious Things</title>
               <note type="titleNote">Note on Title</note>
               <!-- Textual Identifiers -->
               <incipit type="hamdala" xml:lang="ara-Latn-x-lc">istikharātu lillāh wa-qayyidtu fī hadhā al-awrāq</incipit>
               <incipit type="hamdala-ara" xml:lang="ara">Arabic Script Incipit</incipit>
               <incipit type="muqadimma" xml:lang="ara-Latn-x-lc">First Line of Intro (after ḥamdala )</incipit>
