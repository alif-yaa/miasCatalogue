               <!-- Authorship and Editorial Roles -->
               <author cert="high" key="IA">Ibn al-ʿArabī</author>
               <editor role="role" key="key">Other Roles</editor>
               <persName role="att" key="IA">Ibn al-ʿArabī</persName>
               <note type="authenticationType" subtype="H">Holograph</note>
               <note type="authenticityNote">Note on Authenticity</note>
               <!-- Composition History -->
               <date type="fmDate" calendar="Hijri-qamari"/>
               <date type="fmEarliestMS" calendar="Hijri-qamari">&lt;638</date>
               <date when="1111" cert="high" calendar="Hijri-qamari">Date of Composition</date>
               <date from="1111" to="1111" cert="medium" calendar="Hijri-qamari">Period of Composition</date>
               <date notBefore="1111"
                     notAfter="1111"
                     cert="low"
                     calendar="Hijri-qamari"
                     evidence="conjecture">Terminus post quem and terminus ante quem</date>
               <note type="dateNote">Note on Date of Composition</note>
               <placeName type="fmPlace"/>
               <note type="placeNote">Note on Place of Composition</note>
               <note type="compositionNote"/>
               <!-- Contents -->
               <noteGrp type="workDesc">
                  <note type="description">Treatise explaining the principles of spiritual journeying (to, from and in God), and the inner meanings of various divine and prophetic journeys, such as the descent of the Qurʿān, the ascension of Muhammad, the fall of Adam, and the journeys of Idris/Enoch, Noah, Abraham, Lot, Jacob, Joseph and Moses.</note>
                  <note type="structure">Structure of Work</note>
                  <note type="contentsNote">Note on Contents</note>
               </noteGrp>
               <!-- Stemmatics -->
               <note type="stemmatics">OY cites 19 mss., verified by three historic mss. The best is Yusuf Ağa 4859 which is an IA holograph, with a samāʿ, but the ms. has been stolen so only a digitised microfilm is now available (first pages missing). Koprulu 713 contains a copy of this ms., dated 663H in Konya. Critical edition by D. Gril, and new critical edition with translation by Angela Jaffray.</note>
               <!-- Related Works -->
               <relatedItem type="type" target="#work_id"/>
               <note type="relationsNote">Note on Related Works</note>
