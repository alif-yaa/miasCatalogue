               <!-- Titles -->
               <title xml:lang="ara-Latn-x-lc" type="uniform">K. al-Ajwiba al-ʿArabiyya fī sharḥ al-naṣāʾiḥ al-Yūsufiyya</title>
               <title xml:lang="ara" type="uniform-ara">كتاب الأجوبة العربية في شرح النصائح الوسفية</title>
               <title xml:lang="ara-Latn-x-lc" type="full">K. al-Ajwiba al-ʿarabiyya fi sharḥ al-naṣāiḥ al-yūsufiyya</title>
               <title xml:lang="ara-Latn-x-lc" type="variant"/>
