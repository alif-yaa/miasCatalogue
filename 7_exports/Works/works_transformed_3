            <bibl xml:id="mash_asr">
               <idno type="RG">432</idno>
               <idno type="Alt_RG"/>
               <idno type="RECORDID">50</idno>
               <idno type="Normalized">mash_asr</idno>
               <!-- Titles -->
               <title xml:lang="ara-Latn-x-lc" type="uniform">K. Mashāhid al-asrār al-qudsiyya</title>
               <title xml:lang="ara" type="uniform-ara">كتاب مشاهد الأسرار القدسية</title>
               <title xml:lang="ara-Latn-x-lc" type="full"/>
               <title xml:lang="ara-Latn-x-lc" type="variant"/>
               <title xml:lang="eng" type="translationEng">Contemplations of the Holy Mysteries</title>
               <note type="titleNote">Note on Title</note>
               <!-- Textual Identifiers -->
               <incipit type="hamdala" xml:lang="ara-Latn-x-lc">katabtu hādhihi al-risāla ilā aṣhāb al-shaykh al-fāḍil al-ʿārif ʿAbd al-ʿAzīz b. Abū Bakr al-Qurashī al-Mahdawī... al-ḥamdu lillāh rabb al-ʿālamīn ḥamdan aniyyatan lā ḥamdan huwiyyatan</incipit>
               <incipit type="hamdala-ara" xml:lang="ara">Arabic Script Incipit</incipit>
