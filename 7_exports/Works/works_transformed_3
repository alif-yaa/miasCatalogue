               <incipit type="hamdala" xml:lang="ara-Latn-x-lc">al-Yathribī alladhī lā naʿta yaḍbiṭuhu</incipit>
               <incipit type="hamdala-ara" xml:lang="ara">Arabic Script Incipit</incipit>
