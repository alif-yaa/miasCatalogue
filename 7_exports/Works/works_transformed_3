               <!-- Titles -->
               <title xml:lang="ara-Latn-x-lc" type="uniform">K. ʿAnqāʾ mughrib</title>
               <title xml:lang="ara" type="uniform-ara">كتاب عنقاء مغرب</title>
               <title xml:lang="ara-Latn-x-lc" type="full">K. ʿAnqāʾ mughrib fī maʿrifa khatm al-awliyāʾ wa shams al-maghrib</title>
               <title xml:lang="ara-Latn-x-lc" type="variant"/>
               <title xml:lang="eng" type="translationEng">The Fabulous Gryphon</title>
               <note type="titleNote">Note on Title</note>
               <!-- Textual Identifiers -->
               <incipit type="hamdala" xml:lang="ara-Latn-x-lc">ḥamidtu ilāhī wa-l-maqāmu ʿaẓīmu</incipit>
               <incipit type="hamdala-ara" xml:lang="ara">Arabic Script Incipit</incipit>
